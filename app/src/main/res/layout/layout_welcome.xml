<androidx.cardview.widget.CardView
    style="@style/CardDefault"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimens_20dp"
    android:layout_marginEnd="@dimen/dimens_20dp"
    android:layout_marginBottom="@dimen/dimens_20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ConstraintWrapHeight">
        <TextView
            android:id="@+id/tv_label_hi"
            style="@style/TextBoldSuperSuperExtraBig"
            android:text="@string/label_hi"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:layout_marginStart="@dimen/dimens_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_name"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_name"
            style="@style/TextBoldBig"
            app:layout_constraintTop_toBottomOf="@id/tv_label_hi"
            app:layout_constraintBottom_toTopOf="@id/tv_label_condition"
            app:layout_constraintLeft_toLeftOf="@id/tv_label_hi"/>
        <TextView
            android:id="@+id/tv_label_condition"
            style="@style/TextBoldBig"
            android:text="@string/label_condition"
            android:layout_marginBottom="@dimen/dimens_20dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toLeftOf="@id/tv_label_hi"
            app:layout_constraintRight_toLeftOf="@id/iv_doctor"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/iv_doctor"
            style="@style/ImageViewWrapAll"
            android:src="@drawable/ic_doctor"
            android:scaleType="fitXY"
            android:layout_marginEnd="@dimen/dimens_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>