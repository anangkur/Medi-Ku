<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearVerticalDefault">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar_back"/>

    <androidx.core.widget.NestedScrollView
        style="@style/NestedScrollDefault"
        android:layout_above="@id/btn_save"
        android:layout_marginTop="?actionBarSize">
        <LinearLayout
            style="@style/LinearVerticalWrap">
            <TextView
                style="@style/TextBoldNormal"
                android:text="@string/label_select_category"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_20dp"
                android:layout_marginEnd="@dimen/dimens_20dp"/>
            <RelativeLayout
                android:id="@+id/btn_select_category"
                style="@style/RelativeWrapAll"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_20dp"
                android:layout_marginEnd="@dimen/dimens_20dp"
                android:background="@drawable/rect_rounded_4dp_gradient_blue"
                android:foreground="?selectableItemBackground">
                <Spinner
                    android:id="@+id/spinner_category"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_0dp"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"/>
                <ImageView
                    android:id="@+id/iv_category"
                    style="@style/ImageView28"
                    android:src="@drawable/ic_pills"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimens_20dp"/>
                <TextView
                    android:id="@+id/tv_category"
                    style="@style/TextBoldBig"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    android:layout_marginStart="@dimen/dimens_20dp"
                    android:layout_toRightOf="@id/iv_category"
                    android:layout_centerVertical="true"/>
                <ImageView
                    style="@style/ImageViewWrapAll"
                    android:src="@drawable/ic_arrow_drop_down_white_24dp"
                    android:layout_marginEnd="@dimen/dimens_20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_diagnose"
                style="@style/TextInputLayoutDefault"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_20dp"
                android:layout_marginEnd="@dimen/dimens_20dp">
                <EditText
                    android:id="@+id/et_diagnose"
                    style="@style/EditTextDefault"
                    android:hint="@string/hint_diagnose"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:maxLines="3"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_date"
                style="@style/TextInputLayoutDefault"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_20dp"
                android:layout_marginEnd="@dimen/dimens_20dp">
                <EditText
                    android:id="@+id/et_date"
                    style="@style/EditTextDefault"
                    android:hint="@string/hint_select_date"
                    android:inputType="none"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:clickable="true"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <View
                style="@style/ViewLine"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimens_20dp"/>

            <TextView
                style="@style/TextBoldExtraBig"
                android:text="@string/label_general_condition"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_20dp"
                android:layout_marginEnd="@dimen/dimens_20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_blood_pressure"
                style="@style/TextInputLayoutDefault"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_20dp"
                android:layout_marginEnd="@dimen/dimens_20dp">
                <EditText
                    android:id="@+id/et_blood_pressure"
                    style="@style/EditTextDefault"
                    android:hint="@string/hint_blood_pressure"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:digits="0987654321"
                    android:maxLines="1"
                    android:maxLength="3"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_temperature"
                style="@style/TextInputLayoutDefault"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_20dp"
                android:layout_marginEnd="@dimen/dimens_20dp">
                <EditText
                    android:id="@+id/et_temperature"
                    style="@style/EditTextDefault"
                    android:hint="@string/hint_body_temperature"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:digits="0987654321"
                    android:maxLines="1"
                    android:maxLength="2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_heart_rate"
                style="@style/TextInputLayoutDefault"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_20dp"
                android:layout_marginEnd="@dimen/dimens_20dp">
                <EditText
                    android:id="@+id/et_heart_rate"
                    style="@style/EditTextDefault"
                    android:hint="@string/hint_heart_rate"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:digits="0987654321"
                    android:maxLines="1"
                    android:maxLength="3"/>
            </com.google.android.material.textfield.TextInputLayout>

            <View
                style="@style/ViewLine"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimens_20dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_upload_document"
                style="@style/ConstraintWrapHeight"
                android:layout_margin="@dimen/dimens_20dp"
                android:foreground="?selectableItemBackground"
                android:background="@color/gray">
                <ImageView
                    android:id="@+id/iv_document"
                    style="@style/ImageViewHeightRatio"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="2:1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <ImageView
                    android:id="@+id/iv_camera"
                    style="@style/ImageViewWrapAll"
                    android:src="@drawable/ic_photo_camera_white_24dp"
                    app:layout_constraintTop_toTopOf="@id/iv_document"
                    app:layout_constraintLeft_toLeftOf="@id/iv_document"
                    app:layout_constraintRight_toRightOf="@id/iv_document"
                    app:layout_constraintBottom_toBottomOf="@id/iv_document"/>
                <ProgressBar
                    android:id="@+id/pb_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/iv_document"
                    app:layout_constraintLeft_toLeftOf="@id/iv_document"
                    app:layout_constraintRight_toRightOf="@id/iv_document"
                    app:layout_constraintBottom_toBottomOf="@id/iv_document"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.anangkur.materialloadingbutton.MaterialLoadingButton
        android:id="@+id/btn_save"
        style="@style/ButtonDefault"
        app:mlb_cornerRadius="@dimen/dimens_100dp"
        app:mlb_defaultColor="@color/colorPrimary"
        app:mlb_textColor="@color/white"
        app:mlb_textButton="@string/btn_save"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>