<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ConstraintDefault"
    tools:context=".feature.view.splash.SplashActivity">

    <ImageView
        android:id="@+id/iv_splash"
        style="@style/ImageView180"
        android:src="@drawable/ic_mediku_512"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/tv_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_splash"
        style="@style/TextBoldSuperSuperExtraBig"
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/iv_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_splash_2"/>

    <TextView
        android:id="@+id/tv_splash_2"
        style="@style/TextBoldNormal"
        android:textAlignment="center"
        android:text="@string/desc_splash"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/dimens_10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/pb_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.8"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>