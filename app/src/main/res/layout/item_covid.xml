<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintWrapHeight"
    android:paddingTop="@dimen/dimens_10dp"
    android:paddingBottom="@dimen/dimens_10dp">
    <LinearLayout
        android:id="@+id/layout_country"
        style="@style/LinearHorizontalWrapAll"
        android:layout_width="@dimen/dimens_0dp"
        android:gravity="center_vertical"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_tv_confirmed">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dimens_1dp">
            <ImageView
                android:id="@+id/iv_country"
                style="@style/ImageView24"
                android:layout_height="15dp"
                android:scaleType="centerCrop"
                android:src="@color/gray"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_country"
            style="@style/TextBoldNormal"
            android:layout_width="match_parent"
            android:text="@string/app_name"
            android:lines="1"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:layout_marginStart="@dimen/dimens_10dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_tv_confirmed"
        android:layout_width="@dimen/dimens_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toTopOf="@id/layout_country"
        app:layout_constraintLeft_toRightOf="@id/layout_country"
        app:layout_constraintRight_toLeftOf="@id/layout_tv_death"
        app:layout_constraintBottom_toBottomOf="@id/layout_country">
        <TextView
            android:id="@+id/tv_confirmed"
            style="@style/TextBoldSmall"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_tv_death"
        android:layout_width="@dimen/dimens_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toTopOf="@id/layout_country"
        app:layout_constraintLeft_toRightOf="@id/layout_tv_confirmed"
        app:layout_constraintRight_toLeftOf="@id/layout_tv_recovered"
        app:layout_constraintBottom_toBottomOf="@id/layout_country">
        <TextView
            android:id="@+id/tv_death"
            style="@style/TextBoldSmall"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_tv_recovered"
        android:layout_width="@dimen/dimens_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toTopOf="@id/layout_country"
        app:layout_constraintLeft_toRightOf="@id/layout_tv_death"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/layout_country">
        <TextView
            android:id="@+id/tv_recovered"
            style="@style/TextBoldSmall"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>